- if Errbit::Config.github_authentication && user == current_user
  - if user.github_account?
    %span.github= link_to "Unlink #{Errbit::Config.github_site_title} account", unlink_github_user_path(user), :method => :delete, :data => { :confirm => "Are you sure?" }
  - else
    %span.github= link_to "Link #{Errbit::Config.github_site_title} account", user_github_omniauth_authorize_path, method: :post
