- if Errbit::Config.github_authentication && user == current_user
  - if user.github_account?
    %span.unlink_github= link_to "Unlink GitHub account", unlink_github_user_path(user), :class => 'btn btn-default', :method => :delete, :data => { :confirm => "Are you sure?" }
  - else
    %span.github= link_to "Link GitHub account", user_omniauth_authorize_path(:github), :class => 'btn btn-default'
