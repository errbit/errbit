<%# locals: (user:) %>
<% if Errbit::Config.google_authentication && user == current_user %>
  <span class="google">
    <% if user.google_account? %>
      <%= link_to user_unlink_google_path(user),
                  method: :patch,
                  data: { confirm: "Are you sure?" } do %>
        <%= fa_icon("google", prefix: "fa-brands") %> Unlink <%= Errbit::Config.google_site_title %> account
      <% end %>
    <% else %>
      <%= link_to user_google_oauth2_omniauth_authorize_path,
                  method: :post do %>
        <%= fa_icon("google", prefix: "fa-brands") %> Link <%= Errbit::Config.google_site_title %> account
      <% end %>
    <% end %>
  </span>
<% end %>
