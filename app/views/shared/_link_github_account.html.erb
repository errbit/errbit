<%# locals: (user:) %>
<% if Errbit::Config.github_authentication && user == current_user %>
  <span class="github">
    <% if user.github_account? %>
      <%= link_to user_unlink_github_path(user),
                  method: :patch,
                  data: { confirm: "Are you sure?" } do %>
        <%= fa_icon("github", prefix: "fa-brands") %> Unlink <%= Errbit::Config.github_site_title %> account
      <% end %>
    <% else %>
      <%= link_to user_github_omniauth_authorize_path,
                  method: :post do %>
        <%= fa_icon("github", prefix: "fa-brands") %> Link <%= Errbit::Config.github_site_title %> account
      <% end %>
    <% end %>
  </span>
<% end %>
