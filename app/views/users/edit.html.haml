- content_for :title, "#{t('edit')} #{user.name}"
- content_for :action_bar do
  = render 'shared/link_github_account', :user => user
  = render 'shared/link_google_account'
  = link_to(t('cancel'), user_path(user), :class => 'btn btn-default')

= form_for user, :html => {:autocomplete => "off"} do |f|
  = render 'fields', :f => f

  %div.buttons= f.submit t('.update_user'), class: 'btn btn-primary'
