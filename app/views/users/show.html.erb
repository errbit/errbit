<% content_for :title do %>
  <% if Errbit::Config.use_gravatar %>
    <%= gravatar_tag(@user.email, s: 86) %>
  <% end %>
  <%= @user.name %>
<% end %>

<% content_for :action_bar do %>
  <%= render "shared/link_github_account", user: @user %>
  <%= render "shared/link_google_account", user: @user %>
  <%= link_to edit_user_path(@user), class: "button" do %>
    <%= fa_icon("pen-to-square") %> <%= t(".edit") %>
  <% end %>
  <%= link_to user_path(@user),
    method: :delete,
    data: {
      confirm: t(".confirm_delete")
    },
    class: "delete button" do %>
    <%= fa_icon("trash") %> <%= t(".destroy") %>
  <% end %>
<% end %>

<table class="single_user">
  <tr>
    <th><%= t(".email") %></th>
    <td class="main"><%= @user.email %></td>
  </tr>

  <% if Errbit::Config.user_has_username %>
    <tr>
      <th><%= t(".username") %></th>
      <td class="main"><%= @user.username %></td>
    </tr>
  <% end %>

  <% if Errbit::Config.github_authentication && @user.github_login.present? %>
    <tr>
      <th><%= "#{Errbit::Config.github_site_title} Login" %></th>
      <td class="main"><%= link_to @user.github_login, "#{Errbit::Config.github_url}/#{@user.github_login}" %></td>
    </tr>
  <% end %>

  <tr>
    <th><%= t(".admin") %></th>
    <td><%= @user.admin? ? t(".admin_yes") : t(".admin_no") %></td>
  </tr>

  <tr>
    <th><%= t(".created") %></th>
    <td><%= @user.created_at.to_fs(:micro) %></td>
  </tr>
</table>
