<% content_for :title, "#{t(".title")} #{@user.name}" %>

<% content_for :action_bar do %>
  <%= render "shared/link_github_account", user: @user %>
  <%= render "shared/link_google_account", user: @user %>
  <%= link_to user_path(@user), class: "button" do %>
    <%= fa_icon("arrow-rotate-left") %> <%= t(".cancel") %>
  <% end %>
<% end %>

<%= form_for @user, html: {autocomplete: "off"} do |f| %>
  <%= render "fields", f: f, user: @user %>

  <div class="buttons">
    <%= button_tag(type: "submit") do %>
      <%= fa_icon("floppy-disk") %> <%= t(".update_user") %>
    <% end %>
  </div>
<% end %>
