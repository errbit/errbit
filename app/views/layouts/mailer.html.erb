<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <%= stylesheet_link_tag "mailers/mailer" %>

    <%# Include CSS inline %>

    <style>
      <%= File.read(Rails.root.join("app/assets/stylesheets/mailers/mailer.css")) %>
    </style>
  </head>

  <body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0">
    <center>
      <table cellpadding="0" cellspacing="0" border="0" width="100%">
        <tbody>
          <tr>
            <td class="header">
              <%= link_to image_tag(URI.join(root_url, ActionController::Base.helpers.asset_path("images/logo.png")).to_s, alt: "Errbit"), root_url %>
            </td>
          </tr>

          <%= yield %>

          <tr>
            <td class="footer">
              Your loyal servant,
              <%= link_to "Errbit", root_url %>
            </td>
          </tr>
        </tbody>
      </table>
    </center>
  </body>
</html>
