<%# locals: (notice:, problem:) %>

<div class="window">
  <table class="summary">
    <tr>
      <th><%= t(".message") %></th>
      <td class="main nowrap"><%= message_graph(problem) %></td>
    </tr>

    <tr>
      <th><%= t(".error_class") %></th>
      <td><%= notice.error_class %></td>
    </tr>

    <% if notice.request["url"].present? %>
      <tr>
        <th><%= t(".url") %></th>
        <td class="nowrap"><%= link_to notice.request["url"], notice.request["url"] %></td>
      </tr>
    <% end %>
  </table>
</div>
